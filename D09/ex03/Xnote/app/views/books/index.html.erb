<p id="notice"><%= notice %></p>

<h1>Books</h1>
<div id="count_books">
<%= Book.count %> Books
</div>
<div id="errors">

</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="books">
    <% @books.each do |book| %>
      <tr id="book_<%= book.id %>">
        <td><%= book.name %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) , remote: true %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="new">

</div>
<br>

<%= link_to 'New Book', new_book_path, remote: true %>
